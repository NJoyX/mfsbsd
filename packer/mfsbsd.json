{
    "variables": {
        "vm_name": "FreeBSD",
        "vagrant_cloud_user": "njoyx_dev",
        "vagrant_cloud_tag_name": "freebsd",
        "cloud_token": "{{ env `ATLAS_TOKEN` }}",
        "version": "12.0",
        "iso_url": "https://github.com/NJoyX/mfsbsd/releases/download/2.4-pre/mfsbsd-12.0-RELEASE-amd64.iso",
        "iso_checksum": "bb1ec709aaa35626910a5a977f6bb0cb638ddce7b6a91e707b0d2b8d9ad733c4",
        "iso_checksum_type": "sha256",
        "boot_wait": "45s",
        "disk_size": "16384",
        "http_directory": "packer/http",
        "ssh_username": "root",
        "ssh_password": "packer",
        "ssh_wait_timeout": "1000s",
        "shutdown_command": "shutdown -p now",
        "headless": "true",
        "vm_memory": "2048"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "FreeBSD_64",
            "vm_name": "{{user `vm_name`}}",
            "memory": "{{user `vm_memory`}}",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "boot_command": [
                "root<enter><wait>",
                "mfsroot<enter><wait>",
                "fetch -o /tmp/bootstrap.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/bootstrap.sh<enter><wait>",
                "chmod +x /tmp/bootstrap.sh; /tmp/bootstrap.sh; shutdown -r now<enter>",
                "<wait5m>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "http_directory": "{{user `http_directory`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "shutdown_command": "{{user `shutdown_command`}}",
            "headless": "{{user `headless`}}"
        },
        {
            "type": "vmware-iso",
            "guest_os_type": "freebsd-64",
            "vm_name": "{{user `vm_name`}}",
            "memory": "{{user `vm_memory`}}",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "boot_command": [
                "root<enter><wait>",
                "mfsroot<enter><wait>",
                "fetch -o /tmp/bootstrap.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/bootstrap.sh<enter><wait>",
                "chmod +x /tmp/bootstrap.sh; /tmp/bootstrap.sh; shutdown -r now<enter>",
                "<wait5m>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "http_directory": "{{user `http_directory`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "shutdown_command": "{{user `shutdown_command`}}",
            "headless": "{{user `headless`}}"
        },
        {
            "type": "parallels-iso",
            "guest_os_type": "freebsd",
            "vm_name": "{{user `vm_name`}}",
            "memory": "{{user `vm_memory`}}",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "boot_command": [
                "root<enter><wait>",
                "mfsroot<enter><wait>",
                "fetch -o /tmp/bootstrap.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/bootstrap.sh<enter><wait>",
                "chmod +x /tmp/bootstrap.sh; /tmp/bootstrap.sh; shutdown -r now<enter>",
                "<wait5m>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "http_directory": "{{user `http_directory`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "shutdown_command": "{{user `shutdown_command`}}",
            "parallels_tools_mode": "disable"
        },
        {
            "type": "qemu",
            "vm_name": "{{user `vm_name`}}",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "boot_command": [
                "root<enter><wait>",
                "mfsroot<enter><wait>",
                "fetch -o /tmp/bootstrap.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/bootstrap.sh<enter><wait>",
                "chmod +x /tmp/bootstrap.sh; /tmp/bootstrap.sh; shutdown -r now<enter>",
                "<wait5m>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "http_directory": "{{user `http_directory`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "shutdown_command": "{{user `shutdown_command`}}",
            "headless": "{{user `headless`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "packer/scripts/base.sh",
                "packer/scripts/vagrant.sh"
            ],
            "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
        },
        {
            "type": "shell",
            "script": "packer/scripts/vmguest.sh",
            "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
            "only": [
                "virtualbox-iso",
                "vmware-iso"
            ]
        },
        {
            "type": "shell",
            "script": "packer/scripts/cleanup.sh",
            "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "vagrantfile_template": "packer/Vagrantfile.tpl",
                "keep_input_artifact": false
            },
            {
                "type": "vagrant-cloud",
                "box_tag": "{{user `vagrant_cloud_user`}}/{{user `vagrant_cloud_tag_name`}}",
                "access_token": "{{user `cloud_token`}}",
                "version": "{{user `version`}}"
            }
        ]
    ]
}
